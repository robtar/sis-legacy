<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="cz.silesnet.model.Node" table="nodes" discriminator-value="NODE_GENERIC">
        <id name="id" column="id" unsaved-value="null">
            <generator class="increment"/>
        </id>
        <discriminator column="class_type" type="string" length="30" />
        
        <property name="parentId" column="parent_id"/>
        <property name="name" not-null="true" length="50" />
        <property name="subNodesCount"
        	formula="(select count(n.id) from nodes as n where n.parent_id=id)"/>
        <property name="info" length="200" />
		<property name="active" />
        <property name="historyId" column="history_id" not-null="true" unique="true" />

		<subclass name="cz.silesnet.model.Wireless" discriminator-value="NODE_WIRELESS">
			<property name="type" type="cz.silesnet.dao.hibernate.support.WirelessEnumHibernateUserType" />
			<property name="frequency" type="cz.silesnet.dao.hibernate.support.WirelessFrequencyHibernateUserType" />
			<property name="mac" length="30" />
			<property name="macVendor"
				formula="(select v.vendor from vendors as v where upper(substr(mac, 1, 6)) = v.mac_prefix)" />
			<property name="customVendor" column="custom_vendor" length="50" />
			<many-to-one name="domain" column="domain_lid" lazy="false" />
			<property name="route" length="50" />
			<property name="ip" length="50" />
			<property name="wep" length="150" />
			<property name="ssid" length="50" />
			<property name="macAuthorization" column="mac_authorization"/>
			<property name="polarization" type="cz.silesnet.dao.hibernate.support.PolarizationHibernateUserType" />
		</subclass>

    </class>
</hibernate-mapping>
